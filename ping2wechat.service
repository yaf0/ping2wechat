[Unit]
Description=Ping Monitor Service
After=network.target

[Service]
ExecStart=/usr/bin/python3 /opt/scripts/ping2wechat/ping2wechat.py
WorkingDirectory=/opt/scripts/ping2wechat
Restart=always
RestartSec=10
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ping2wechat

[Install]
WantedBy=multi-user.target

